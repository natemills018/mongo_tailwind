{
    "name": "ts-react-express-esbuild",
    "version": "1.0.0",
    "description": "A boilerplate project for TypeScript, React, Express using esbuild.",
    "main": "dist/server.js",
    "scripts": {
        "watch:client": "node esbuild-config/client.dev.mjs",
        "watch:server": "node esbuild-config/server.dev.mjs",
        "watch:css": "npx tailwindcss -i ./src/client/styles/app.scss -o ./public/output.css --watch",
        "watch:restart-server": "nodemon --config nodemon.json",
        "dev": "npm-run-all --parallel watch:*",
        "build:client": "node esbuild-config/client.prod.mjs",
        "build:server": "node esbuild-config/server.prod.mjs",
        "build:css": "npx tailwindcss -i ./src/client/styles/app.scss -o ./public/output.css",
        "build": "npm-run-all --sequential build:*",
        "start": "node dist/server.js"
    },
    "keywords": [
        "typescript",
        "react",
        "express",
        "esbuild",
        "boilerplate"
    ],
    "author": "Covalence",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.8.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.5.0",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "autoprefixer": "^10.4.20",
        "esbuild": "^0.19.2",
        "esbuild-sass-plugin": "^2.12.0",
        "nodemon": "^3.0.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.41",
        "sass": "^1.65.1",
        "tailwindcss": "^3.4.10",
        "typescript": "^5.1.6"
    }
}
